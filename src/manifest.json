{
    "manifest_version": 2,
    "name": "Super Mega Awesome Care-Tags Filter Extraordinaire",
    "description": "This extension will replace a wide assortment of words with the care-tagsâ„¢-approved versions of the words",
    "version": "1.0",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "care-tags filter"
    },
    "background": {
        "scripts": ["js/toggle.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/replace.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "data/filters.json"
    ]
}