{
    "manifest_version": 2,
    "name": "Super Mega Awesome Care-Tags Filter",
    "description": "This extension will replace a wide assortment of words with the care-tagsâ„¢-approved replacement.",
    "version": "1.0.2",
    "browser_action": {
        "default_icon": "images/icon-32.png",
        "default_title": "Super Mega Awesome Care-Tags Filter Extraordinaire"
    },
    "background": {
        "scripts": ["js/toggle.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/replace.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "data/filters.json"
    ],
    "icons": {
        "128": "images/icon-128.png",
        "48": "images/icon-48.png",
        "32": "images/icon-32.png",
        "16": "images/icon-16.png"
    }
}